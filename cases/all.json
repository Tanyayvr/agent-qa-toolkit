[
  {
    "id": "fmt_001",
    "title": "Return JSON: create_ticket payload",
    "input": {
      "user": "Create a support ticket for customer CUST-1001: 'App crashes on login'. Return JSON only."
    },
    "expected": {
      "json_schema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "additionalProperties": false,
        "required": [
          "action",
          "customer_id",
          "summary",
          "priority"
        ],
        "properties": {
          "action": {
            "type": "string",
            "const": "create_ticket"
          },
          "customer_id": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        }
      },
      "tool_required": [
        "create_ticket"
      ],
      "must_not_include": [
        "CUST-9999"
      ]
    },
    "metadata": {
      "tags": [
        "format",
        "tool"
      ],
      "severity": "high",
      "kind": "tool_agent"
    },
    "suite": "correctness"
  },
